<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="@dimen/iv_zip_code_dimens"
        android:layout_height="@dimen/iv_zip_code_dimens"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/et_PLZ"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/et_PLZ" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textSize="@dimen/title_text_height"
        android:text="@string/instruction_to_get_forecast"
        app:layout_constraintBottom_toTopOf="@+id/et_PLZ"
        app:layout_constraintEnd_toEndOf="@+id/et_PLZ"
        app:layout_constraintStart_toStartOf="@+id/et_PLZ" />

    <EditText
        android:id="@+id/et_PLZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/hint_et_plz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_submit_zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_btn_submit_zip_code"
        app:layout_constraintEnd_toEndOf="@+id/et_PLZ"
        app:layout_constraintStart_toStartOf="@+id/et_PLZ"
        app:layout_constraintTop_toBottomOf="@+id/et_PLZ" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_forecast_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_background_rv_forecast_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_submit_zip_code" />
</androidx.constraintlayout.widget.ConstraintLayout>